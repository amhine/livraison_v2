<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Ajout de l'entité Customer -->
    <changeSet id="2" author="Nihad Amhine" context="v2.0">
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="latitude" type="DOUBLE"/>
            <column name="longitude" type="DOUBLE"/>
            <column name="preferred_time_slot" type="VARCHAR(50)"/>
        </createTable>

        <!-- Rollback : suppression de la table si erreur -->
        <rollback>
            <dropTable tableName="customer"/>
        </rollback>
    </changeSet>

    <!-- Ajout de l'entité DeliveryHistory -->
    <changeSet id="3" author="Nihad Amhine" context="v2.0">
        <createTable tableName="delivery_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="delivery_id" type="BIGINT"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="timestamp" type="DATETIME"/>
        </createTable>

        <!-- Rollback -->
        <rollback>
            <dropTable tableName="delivery_history"/>
        </rollback>
    </changeSet>

    <!-- Ajouter colonne status sur tour (V2) -->
    <changeSet id="2-tour-add-status" author="Nihad Amhine" context="v2.0">
        <addColumn tableName="tour">
            <column name="status" type="VARCHAR(30)"/>
        </addColumn>
        <createIndex tableName="tour" indexName="idx_tour_status">
            <column name="status"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="tour" indexName="idx_tour_status"/>
            <dropColumn tableName="tour" columnName="status"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
